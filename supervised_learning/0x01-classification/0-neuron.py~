"""
0-neuron.py
Module defining a neuron
"""
import numpy as np


class Neuron:
    """Neuron class. Defines a neuron.
    """
    def __init__(self, nx):
        """Initializes the data."""
        if type(nx) != int:
            raise TypeError("nx must be an integer")
        if nx < 1:
            raise ValueError("nx must be a positive integer")
